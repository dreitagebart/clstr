{
  "name": "@clstr/core",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:web": "turbo build --filter=@clstr/web",
    "build:docs": "turbo build --filter=@clstr/docs",
    "dev": "turbo dev",
    "dev:web": "turbo dev --filter=@clstr/web...",
    "dev:docs": "turbo dev --filter=@clstr/docs",
    "clean": "turbo run clean && rm -rf ./node_modules",
    "reset": "turbo run clean && pnpm install",
    "type-check": "turbo type-check",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@clstr/eslint-config": "workspace:*",
    "@clstr/typescript-config": "workspace:*",
    "prettier": "^3.1.1",
    "turbo": "latest"
  },
  "packageManager": "pnpm@8.9.0",
  "engines": {
    "node": ">=18"
  }
}