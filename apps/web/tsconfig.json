{
  "extends": "@clstr/typescript-config/nextjs.json",
  "compilerOptions": {
    "paths": {
      "@styles/*": ["../../packages/ui/src/styles/*"],
      "@components/*": ["../../packages/ui/src/components/*"],
      "@hooks/*": ["../../packages/ui/src/hooks/*"],
      "@utils/*": ["../../packages/ui/src/utils/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    "postcss.config.cjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
